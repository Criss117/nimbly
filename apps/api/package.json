{
	"name": "@nimbly/api",
	"version": "1.0.0",
	"description": "",
	"files": ["dist"],
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/es/index.mjs",
	"types": "./dist/es/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/es/index.d.ts",
				"default": "./dist/es/index.mjs"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "bunchee --minify",
		"dev": "tsx watch src/index.ts",
		"check-types": "tsc --noEmit",
		"seed": "tsx seed/index.ts",
		"start": "node dist/es/index.mjs"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@nimbly/db": "workspace:*",
		"@nimbly/trpc": "workspace:*",
		"@trpc/server": "11.4.3",
		"cors": "2.8.5",
		"express": "5.1.0",
		"morgan": "1.10.1"
	},
	"devDependencies": {
		"@faker-js/faker": "9.9.0",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/morgan": "1.9.10",
		"@types/node": "24.0.15",
		"bunchee": "6.5.4",
		"drizzle-kit": "0.31.4",
		"tsx": "4.20.3",
		"typescript": "5.8.3"
	},
	"bunchee": {
		"format": "cjs,esm",
		"external": ["@trpc/server", "express"]
	}
}
